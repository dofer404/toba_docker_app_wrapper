#!/usr/bin/env bash

DIRBIN=`dirname $0`
DIRPROY=$DIRBIN/..
DIRAPP=$DIRPROY/app
DIRBD=$DIRPROY/bd

DOCKERCOMPOSEFILE=$DIRAPP/docker-compose.yml
COMPOSERFILE=$DIRAPP/composer.json
EXPORTARFILE=$DIRAPP/bin/exportar
REGENERARFILE=$DIRAPP/bin/regenerar

DOCKERCOMPOSEFILE_OK=$(grep "<NOMBRE\ PROYECTO>" $DOCKERCOMPOSEFILE)
COMPOSERFILE_OK=$(grep "siu-toba\/template-proyecto-toba" $COMPOSERFILE)
EXPORTARFILE_OK=$(grep "<NOMBRE\ PROYECTO>" $EXPORTARFILE)
REGENERARFILE_OK=$(grep "<NOMBRE\ PROYECTO>" $REGENERARFILE)

MSG_PLACEHOLDERS_ENCONTRADOS="POSEE los placeholders necesarios para insertar el nombre del proyecto. Â¿FALTA establecer el nombre del proyecto?"

if [ "$DOCKERCOMPOSEFILE_OK" ];
then
  echo "Error: $DOCKERCOMPOSEFILE: $MSG_PLACEHOLDERS_ENCONTRADOS"
  exit 1
fi
if [ "$COMPOSERFILE_OK" ];
then
  echo "Error: $COMPOSERFILE: $MSG_PLACEHOLDERS_ENCONTRADOS"
  exit 1
fi
if [ "$EXPORTARFILE_OK" ];
then
  echo "Error: $EXPORTARFILE: $MSG_PLACEHOLDERS_ENCONTRADOS"
  exit 1
fi
if [ "$REGENERARFILE_OK" ];
then
  echo "Error: $REGENERARFILE: $MSG_PLACEHOLDERS_ENCONTRADOS"
  exit 1
fi

exit 0
